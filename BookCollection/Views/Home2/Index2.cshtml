@model List<BookCollection.Models.DVD>

<div>
	<table>
		<tr><th>Producer Name</th><th>Title</th><th>Publish Date</th></tr>
		@{
			foreach (var dvd in Model)
			{
				<tr>
					<td>@dvd.ProducerName</td>
					<td>@dvd.Title</td>
					<td>@dvd.PublishDate.ToShortDateString()</td>
				</tr>
			}
		}
	</table>
</div>
<br />
<div>@Html.ActionLink("Add New DVD", "AddDVD", "Home2", new { @class = "btn btn-primary btn-large" })</div>

@section partial {
	<div id="partialContainer">
		@{
			var dvd = new BookCollection.Models.DVD()
			{
				Title        = "Partial title from Index2.cshtml.",
				ProducerName = "Partial producer from Index2.csthml.",
				PublishDate  = DateTime.Now
			};

			var dictionary = new ViewDataDictionary {
				{ "key1", "Index2.cshtml value 1" },
				{ "key2", "Index2.cshtml value 2" },
				{ "key3", "Index2.cshtml value 3" }
			};

			Html.RenderPartial("~/Views/Partials/DVDPartial.cshtml", dvd, dictionary);
		}
	</div>
}

@section footer {
	Index2.cshtml footer (section rendered).
}